@model List<Car>

<h2>Biler tilknyttet verkstedet</h2>

<style>
    table {
        width: 100%;
        border-collapse: collapse;  /* Fjerner mellomrom mellom cellene */
    }

    table, th, td {
        border: 1px solid #ddd;  /* Grå kantlinje for tabellen og cellene */
    }

    th, td {
        padding: 8px;  /* Gir litt plass rundt teksten */
        text-align: left;  /* Justerer teksten til venstre */
    }

    th {
        background-color: #f2f2f2;  /* Lys bakgrunnsfarge på overskriftene */
    }

    td {
        word-wrap: break-word;  /* Hindrer tekst fra å gå ut av cellen */
    }
</style>

<a href="@Url.Action("AddCar", "Home")">
    <button>Legg til ny bil</button>
</a>

@if (Model != null && Model.Any()) 
{
    <table>
        <thead>
            <tr>
                <th>Registreringsnummer</th>
                <th>Beskrivelse</th>
                <th>Modell</th>
                <th>Merke</th>
                <th>Antall Dekk</th>
                <th>Handlinger</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var car in Model)
            {
                <tr>
                    <td>@car.LicensePlate</td>
                    <td>@car.Description</td>
                    <td>@car.Model</td>
                    <td>@car.Brand</td>
                    <td>@car.TireCount</td>
                    <td>
                        <a href="@Url.Action("EditCar", "Home", new { licensePlate = car.LicensePlate})">
                            <button>Rediger</button>
                        </a>
                        <form asp-action="DeleteCar" method="post" style="display:inline-size: ;">
                            <input type="hidden" name="licensePlate" value="@car.LicensePlate"/>
                            <button type="submit" onclick="return confirm('Er du sikker på at du vil slette denne bilen?')">Slett</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Ingen biler funnet.</p>
}
