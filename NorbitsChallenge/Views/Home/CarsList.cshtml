@model List<Car>

<h2>Biler tilknyttet verkstedet</h2>

<a href="@Url.Action("AddCar", "Home")">
    <button>Legg til ny bil</button>
</a>

@if (Model != null && Model.Any()) 
{
    <table>
        <thead>
            <tr>
                <th>Bilskilt</th>
                <th>Beskrivelse</th>
                <th>Modell</th>
                <th>Merke</th>
                <th>Antall Dekk</th>
                <th>Handlinger</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var car in Model)
            {
                <tr>
                    <td>@car.LicensePlate</td>
                    <td>@car.Description</td>
                    <td>@car.Model</td>
                    <td>@car.Brand</td>
                    <td>@car.TireCount</td>
                    <td>
                        <form asp-action="DeleteCar" method="post" style="display:inline-size: ;">
                            <input type="hidden" name="licensePlate" value="@car.LicensePlate"/>
                            <button type="submit" onclick="return confirm('Er du sikker pÃ¥ at du vil slette denne bilen?')">Slett</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Ingen biler funnet.</p>
}
