@model Car

@{
    ViewData["Title"] = "Legg til ny bil";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="AddCar" method="post">
    <div>
        <label for="LicensePlate">Bilskilt</label>
        <input type="text" id="LicensePlate" name="LicensePlate" />
    </div>
    <div>
        <label for="Description">Beskrivelse</label>
        <input type="text" id="Description" name="Description" />
    </div>
    <div>
        <label for="Model">Modell</label>
        <input type="text" id="Model" name="Model" />
    </div>
    <div>
        <label for="Brand">Merke</label>
        <input type="text" id="Brand" name="Brand" />
    </div>
    <div>
        <label for="TireCount">Antall Dekk</label>
        <input type="number" id="TireCount" name="TireCount" />
    </div>
    <div>
        <label for="CompanyId">CompanyId</label>
        <input type="hidden" id="CompanyId" name="CompanyId" value="@Model.CompanyId" />
    </div>
    <button type="submit">Legg til bil</button>
</form>
